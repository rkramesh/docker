pre-req
apt-get update
install vim,docker, docker-compose, git,openssh
Get bashrc from tm
mkfifo /media/rkpipe
cd /root
clone https://github.com/rkramesh/docker.git into root
create symbolic link 
   ln -s /root/docker/files/.bash_aliases ~/.bash_aliases [ home direc]
    ln -s /root/docker/docker-compose.yml docker-compose.yml 
    ln -s /root/docker/files/py-up.py py-up.py
   ln -s /root/docker/files/execpipe.sh execpipe.sh
copy .bashrc,py-up.py to root folder
copy sendvideo.sh(no sym link),execpipe.sh,rpi_backup.sh to /media


crontab -e  
# m h  dom mon dow   command
@reboot sleep 60 && /media/execpipe.sh
0 0 * * * /media/rpi_backup.sh
echo -e "fs.inotify.max_user_watches=204800" | tee -a /etc/sysctl.conf
